# ============================================
# TFG Gaming Club - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MySQL Connection String for cPanel
# Format: mysql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
# 
# cPanel Note: Your actual database name will be prefixed with your cPanel username
# Example: If your cPanel username is "cpanel_user" and you create database "tfg_gaming"
#          The full database name will be: cpanel_user_tfg_gaming
#
# Common MySQL hosts:
# - localhost (most cPanel setups)
# - 127.0.0.1
# - Remote host provided by hosting (check cPanel)
# 
# Default MySQL port: 3306

DATABASE_URL="mysql://your_mysql_user:your_mysql_password@localhost:3306/your_database_name"

# Example for cPanel:
# DATABASE_URL="mysql://cpanel_user_tfg:SecurePass123@localhost:3306/cpanel_user_gaming"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================

# NextAuth Secret Key
# Generate a secure random string:
# - Run: openssl rand -base64 32
# - Or use: https://generate-secret.vercel.app/32
# IMPORTANT: Keep this secret and never share it publicly

NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# NextAuth URL
# This should be the full URL where your application is hosted
# Examples:
# - https://yourdomain.com
# - https://subdomain.yourdomain.com
# - http://localhost:3000 (for local development only)

NEXTAUTH_URL="https://your-domain.com"

# ============================================
# DISCORD INTEGRATION (Optional)
# ============================================

# Discord OAuth Application
# Only needed if you want Discord SSO login functionality
# Create a Discord application at: https://discord.com/developers/applications
# 
# Setup Instructions:
# 1. Go to Discord Developer Portal
# 2. Create New Application
# 3. Go to OAuth2 section
# 4. Add redirect URL: https://your-domain.com/api/auth/callback/discord
# 5. Copy Client ID and Client Secret below

DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Discord Webhook for Notifications
# Used to send booking notifications to Discord channel
# 
# Setup Instructions:
# 1. Go to your Discord server
# 2. Server Settings → Integrations → Webhooks
# 3. Create New Webhook
# 4. Copy Webhook URL below
# 
# Format: https://discord.com/api/webhooks/WEBHOOK_ID/WEBHOOK_TOKEN

DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your-webhook-id/your-webhook-token"

# ============================================
# NODE ENVIRONMENT
# ============================================

# Set to 'production' for live deployment
# Set to 'development' for local testing
NODE_ENV="production"

# ============================================
# CPANEL SPECIFIC (Optional)
# ============================================

# Port for Node.js application
# cPanel usually assigns this automatically
# Default: 3000
# PORT=3000

# ============================================
# NOTES
# ============================================
# 
# 1. Never commit .env file to version control (Git)
# 2. Keep all secrets secure and never share publicly
# 3. Use different values for development vs production
# 4. Backup your .env file securely
# 5. After changing .env, restart your Node.js application
# 
# ============================================
