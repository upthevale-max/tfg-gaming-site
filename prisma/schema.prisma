generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
  output = "../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// TFG Gaming Club Models
enum MembershipType {
  WEEKLY
  MONTHLY
  YEARLY
}

enum BookingStatus {
  ACTIVE
  FROZEN
  COMPLETED
}

model User {
  id                  String         @id @default(cuid())
  username            String         @unique
  password            String
  realName            String
  dob                 DateTime
  discordUsername     String
  membershipType      MembershipType @default(WEEKLY)
  membershipExpiry    DateTime?
  membershipExpiredAt DateTime? // When the membership expired (for notification tracking)
  isAdmin             Boolean        @default(false)
  balanceDue          Float          @default(0)
  freeWeek            Boolean        @default(false)
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  accounts        Account[]
  sessions        Session[]
  bookingsCreated Booking[]       @relation("BookingCreator")
  bookingsJoined  Booking[]       @relation("BookingPlayers")
  bookingsPaid    Booking[]       @relation("BookingPaidUsers")
  paymentRecords  PaymentRecord[]
  paymentLogs     PaymentLog[]
}

model Game {
  id              String    @id @default(cuid())
  name            String    @unique
  iconUrl         String?
  showOnFrontpage Boolean   @default(true)
  bookings        Booking[]
  createdAt       DateTime  @default(now())
}

model Booking {
  id            String        @id @default(cuid())
  date          DateTime
  tableNumber   Int
  game          Game          @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId        String
  creator       User          @relation("BookingCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdById   String
  players       User[]        @relation("BookingPlayers")
  paidUsers     User[]        @relation("BookingPaidUsers")
  playersNeeded Int           @default(2)
  notes         String?
  status        BookingStatus @default(ACTIVE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([date, tableNumber])
  @@index([gameId])
  @@index([createdById])
}

model Settings {
  id         String   @id @default(cuid())
  tableCount Int      @default(15)
  updatedAt  DateTime @updatedAt
}

model PaymentRecord {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  amount    Float
  date      DateTime @default(now())
  type      String // "weekly", "monthly", "yearly", "payment"
  notes     String?
  createdAt DateTime @default(now())

  @@index([userId])
}

model PaymentLog {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  weekDate    DateTime // The Monday date for this week
  amountDue   Float // Amount they owe for this week (£3 or £10/£100 if renewal)
  isPaid      Boolean  @default(false)
  paymentType String // "weekly" or "renewal_monthly" or "renewal_yearly"
  notes       String?
  createdAt   DateTime @default(now())

  @@unique([userId, weekDate])
  @@index([userId])
}
